<p id="notice"><%= notice %></p>

<h1>All Postings</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Description</th>
      <th>Rate</th>
      <th>Date range</th>
      <!-- <th>Street</th> -->
      <!-- <th>State</th> -->
      <!-- <th>Zip</th> -->
      <!-- <th>Phone</th> -->
      <!-- <th>Email</th> -->
      <th>Other Actions</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @postings.each do |posting| %>
      <tr>
        <td><%= posting.category.try :name %></td>
        <td><%= link_to(posting.title, action: 'show', id: posting.id) %></td>
        <td class="description-column"><%= posting.description %></td>
        <td><%= posting.rate %></td>
        <td><%= posting.available_dates %></td>
        <!-- <td><%= posting.street %></td> -->
        <!-- <td><%= posting.state %></td> -->
        <!-- <td><%= posting.zip %></td> -->
        <!-- <td><%= posting.phone %></td> -->
        <!-- <td><%= posting.email %></td> -->
        <td><%= link_to 'Show', posting %> |
          <%= link_to 'Edit', edit_posting_path(posting) %> |
          <%= link_to 'Destroy', posting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

